---
// Layout for the status page
import { SITE_CONFIG } from '../config';
import '../styles/global.css'; // Import CSS for processing by Astro/Tailwind

// Get base path for navigation links
const basePath = import.meta.env.PUBLIC_BASE_URL || '/';
const statusLink = basePath === '/' ? '/' : basePath + '/';
const historyLink = basePath === '/' ? '/history' : basePath + '/history';
const incidentsLink = basePath === '/' ? '/incidents' : basePath + '/incidents';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{SITE_CONFIG.name}</title>
    <meta name="description" content={SITE_CONFIG.description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- JetBrains Mono font for terminal-like appearance -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-terminal-black text-terminal-white min-h-screen pb-24 font-mono">
    <header class="fixed top-0 left-0 right-0 z-50 border-b border-terminal-divider p-3 bg-terminal-dark/90 backdrop-blur-sm">
      <div class="container mx-auto flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <h1 class="text-lg font-bold text-terminal-cyan tracking-tighter font-mono">WebStats</h1>
          <span class="text-terminal-dim text-xs font-mono">by</span>
          <span class="text-terminal-violet text-xs font-bold font-mono">princetheprogrammer</span>
        </div>
        <nav>
          <ul class="flex space-x-4">
            <li><a href={statusLink} class="text-terminal-white hover:text-terminal-cyan transition-colors font-mono text-xs px-2 py-1">Status</a></li>
            <li><a href={historyLink} class="text-terminal-white hover:text-terminal-cyan transition-colors font-mono text-xs px-2 py-1">History</a></li>
            <li><a href={incidentsLink} class="text-terminal-white hover:text-terminal-cyan transition-colors font-mono text-xs px-2 py-1">Incidents</a></li>
          </ul>
        </nav>
      </div>
    </header>
    
    <main class="container mx-auto p-4 pt-20">
      <slot />
    </main>
    
    <footer class="fixed bottom-0 left-0 right-0 z-50 border-t border-terminal-divider p-3 bg-terminal-dark/90 backdrop-blur-sm">
      <div class="container mx-auto flex items-center justify-between text-terminal-dim text-xs font-mono">
        <div class="flex items-center space-x-4">
          <span>built by <span class="text-terminal-cyan">princetheprogrammer</span></span>
          <span>•</span>
          <span>open-source monitoring</span>
        </div>
        <div class="flex items-center space-x-4">
          <span>powered by <span class="text-terminal-violet">webstats</span></span>
          <span>•</span>
          <span>terminal-core design</span>
        </div>
      </div>
    </footer>
  </body>
</html>